{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_api.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "requirements": "backend/requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_api.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/vercel_api.py"
    }
  ]
}